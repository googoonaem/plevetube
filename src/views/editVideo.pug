extends base

block content
    h4 Change Title of video
    form(method="POST")
        input(name="title", placeholder="video title", value=video.title, required)
        input(name="url", placeholder="video title", value=video.url, required)
        input(name="description", placeholder="video description", value=video.description, required)
        input(name="hashtags", placeholder="video hashtags", value=video.hashtags.map(item => item.replace('#', '')).join(','))
        input(type="submit", value="Save")

