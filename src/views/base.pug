doctype html
html(lang="ko")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{pageTitle} ::: plevetube💙💜🩷❤️🖤
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")

    body 
        header
            h1=pageTitle
            ul 
                li 
                    form(method="GET" action="/search")
                        input(placeholder="search by title", name="keyword", type="text")
                        input(type="submit", value="🔍")
                li 
                    a(href="/") home🏠
                if loggedIn
                    li 
                        a(href="/users/my-profile") #{loggedInUser.name}의 Profile
                    li 
                        a(href="/users/logout") Logout
                else
                    li
                        a(href="/join") Join
                    li 
                        a(href="/login") Login
                    li 
                        a(href="/videos/upload") Upload Video📼
                li
                    a(href="/color") color칩
            //- - const usernum = Math.floor(Math.random() * 5);
            //- if fakeUser[usernum].loggedIn
            //-     small Hello #{fakeUser[usernum].username}!!
        main
            block content
        include partials/footer